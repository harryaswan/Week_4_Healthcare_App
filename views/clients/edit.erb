<div class="content">

  <h2>Edit Client</h2>

  <form action="/clients/<%= @client.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="id">ID: <%= @client.id %></label>
    <label for="name">Name: </label>
    <input type="text" name="name" value="<%= @client.name %>"><br>
    <label for="address">Address: </label>
    <input type="text" name="address" value="<%= @client.address %>"><br>
    <label for="requirements">Requirements: </label>
    <input type="text" name="requirements" value="<%= @client.requirements %>"><br>
    <label for="image">Image (link): </label>
    <input type="text" name="image" value="<%= @client.image %>"><br>



    <input type='submit' value="Update Client">
  </form>

</div>

