<div class="content">

  <h2>Edit Shift</h2>

  <form action="/shifts/<%= @shift.id %>" method="post">
    <input type="hidden" name="_method" value="put">

    <label for="id">ID: <%= @shift.id %></label>

    <label for="employee_id">Employee ID: </label>
    <input type="text" name="employee_id" value="<%= @shift.employee_id %>"><br>

    <label for="client_id">Client ID: </label>
    <input type="text" name="client_id" value="<%= @shift.client_id %>"><br>

    <label for="shift_report">Shift Report (link): </label>
    <input type="text" name="shift_report" value="<%= @shift.shift_report %>"><br>

    <label for="shift_date">Date: </label>
    <input type="date" name="shift_date" value="<%= @shift.shift_date %>"><br>

    <label for="shift_time">Time: </label>
    <input type="time" name="shift_time" value="<%= @shift.shift_time %>"><br>

    <input type='submit' value="Update Shift">
  </form>

</div>