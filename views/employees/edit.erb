<div class="content">

  <h2>Edit Employee</h2>

  <form action="/employees/<%= @employee.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="id">ID: <%= @employee.id %></label>
    <label for="name">Name: </label>
    <input type="text" name="name" value="<%= @employee.name %>"><br>
    <label for="bio">Bio: </label>
    <input type="text" name="bio" value="<%= @employee.bio %>"><br>
    <label for="image">Image (link): </label>
    <input type="text" name="image" value="<%= @employee.image %>"><br>
    <label for="start_date">Start date: </label>
    <input type="date" name="start_date" value="<%= @employee.start_date %>"><br>


    <input type='submit' value="Update Employee">
  </form>

</div>